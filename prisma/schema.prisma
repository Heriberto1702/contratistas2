// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Conexi칩n a PostgreSQL
}

// Define el modelo de Login_plataforma

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String
  createdAt DateTime @default(now())
}

// Define el modelo de post
model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  authorId  Int      // Clave for치nea para la relaci칩n con User
  author    User     @relation(fields: [authorId], references: [id])
  comments  Comment[] // Relaci칩n uno a muchos con Comment
}

